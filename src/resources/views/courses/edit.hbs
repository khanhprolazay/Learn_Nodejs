<div class='mt-4'>
    <h3>Cập nhật khóa học</h3>
    <form method='POST' action='/courses/{{course._id}}?_method=PUT'>
        <div class='form-group'>
            <label for='exampleInputEmail1'>Tên khóa học</label>
            <input
                type='text'
                class='form-control'
                id='name'
                name='name'
                value='{{course.name}}'
                required
            />
        </div>
        <div class='form-group'>
            <label for='exampleInputPassword1'>Mô tả khóa học</label>
            <input
                type='text'
                class='form-control'
                id='description'
                name='description'
                value='{{course.description}}'
                required
            />
        </div>
        <div class='form-group'>
            <label for='exampleInputPassword1'>Link hình ảnh</label>
            <input
                type='text'
                class='form-control'
                id='image'
                name='image'
                value='{{course.image}}'
                required
            />
        </div>
        <div class='form-group'>
            <label for='exampleInputPassword1'>Link video</label>
            <input
                type='text'
                class='form-control'
                id='video'
                name='video'
                value='{{course.image}}'
                required
            />
        </div>
        <div class='form-group'>
            <label for='exampleInputPassword1'>Slug</label>
            <input
                type='text'
                class='form-control'
                id='slug'
                name='slug'
                value='{{course.slug}}'
                required
            />
        </div>
        <button type='submit' class='btn btn-primary'>Lưu lại</button>
    </form>
</div>